{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "drugs",
    "type": "object",
    "properties": {
      "drug_uuid": {
        "type": "string",
        "format": "uuid",
        "description": "Deterministic UUID generated from application_number"
      },
      "application_number": { "type": "string" },
      "drug_name":          { "type": "string" }
    },
    "required": ["drug_uuid", "application_number", "drug_name"],
    "additionalProperties": false
  }
  